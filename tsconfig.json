{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [ "ESNext", "DOM", "DOM.iterable", "scripthost" ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "src/**/*.vue",
  ],
  "exclude": [
    "/node_modules"
  ]
}